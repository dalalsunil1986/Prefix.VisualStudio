<UserControl x:Class="Prefix.VSExt2015.Controls.Waiting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             Background="#FF313E4F" 
             Foreground="White" >
    <UserControl.Resources>
        <SolidColorBrush Color="#FFdf691a" x:Key="HeaderColor"></SolidColorBrush>
    </UserControl.Resources>
    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="50">
        <WrapPanel HorizontalAlignment="Center">
            <fa:FontAwesome Icon="Spinner" Spin="True" SpinDuration="2" Margin="0,0,10,0" FontSize="18.667" Foreground="{StaticResource HeaderColor}"></fa:FontAwesome>
            <TextBlock Text="Waiting for requests" FontSize="18.667" Foreground="{StaticResource HeaderColor}"></TextBlock>
        </WrapPanel>
    </StackPanel>
</UserControl>
